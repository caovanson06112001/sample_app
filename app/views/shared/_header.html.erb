<header class="navbar navbar-fixed-top navbar-inverse">
 <div class="container">
   <%= link_to t("sample_app"), static_pages_home_path, id: "logo" %>
   <nav>
     <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), static_pages_home_path %></li>
        <li><%= link_to t("help"), static_pages_help_path %></li>
        <li><%= link_to t("english"), locale: :en %></li>
        <li><%= link_to t("vietnamese"), locale: :vi %></li>
        <% if logged_in? %>
          <li><%= link_to t("users"), users_path %></li>
          <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t "account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("user.edit_user"), edit_user_path(current_user) %></li>
              <li><%= link_to t("settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("log_in"), login_path %></li>
        <% end %>
     </ul>
   </nav>
 </div>
</header>
