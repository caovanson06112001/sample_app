<% provide(:title, t("all")) %>
<h1><%= t "all" %></h1>
<%== pagy_nav(@pagy) %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    <li>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to t("delete"), user, method: :delete,
        data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%== pagy_nav(@pagy) %>
